<Window x:Class="UdpNatPunchClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UdpNatPunchClient"
        xmlns:behaviours="clr-namespace:Behaviours"
        mc:Ignorable="d"
        Title="Client" 
        Height="600"
        Width="750"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Window.Resources>
        <ResourceDictionary Source="/Styles.xaml"/>
    </Window.Resources>
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal">
            <TextBlock
                Style="{StaticResource BaseTextBlock}"
                Text="My ID:"/>
            <TextBox
                Style="{StaticResource BaseTextBox}"
                IsReadOnly="True"
                Text="{Binding ID, Mode=OneWay}"/>
        </StackPanel>
        <Button
            Grid.Row="1"
            Style="{StaticResource BaseButton}"
            Command="{Binding ConnectToTrackerCommand}">
            <TextBlock
                Style="{StaticResource BaseTextBlock}"
                Text="Connect to tracker"/>
        </Button>
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal">
            <TextBlock
                Style="{StaticResource BaseTextBlock}"
                Text="Currect tracker:"/>
            <Button
                Style="{StaticResource BaseButton}"
                Width="150"
                Command="{Binding SelectTrackerDialogCommand}">
                <TextBlock
                    Style="{StaticResource BaseTextBlock}"
                    Text="{Binding TrackerAddress}"/>
            </Button>
        </StackPanel>
        <Button
            Grid.Row="3"
            Style="{StaticResource BaseButton}"
            Command="{Binding ConnectToPeerCommand}"
            IsEnabled="{Binding IsConnectedToTracker}">
            <TextBlock
                Style="{StaticResource BaseTextBlock}"
                Text="Connect to new peer"/>
        </Button>
        <Grid
            Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource BaseTextBlock}"
                    Text="Connected peers:"/>
                <ListBox
                    Grid.Row="1"
                    ItemsSource="{Binding ConnectedUsers}"
                    SelectedItem="{Binding SelectedPeer}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Margin="6">
                                <TextBlock
                                    Style="{StaticResource BaseTextBlock}"
                                    Text="{Binding ID}"/>
                                <TextBlock
                                    Style="{StaticResource BaseTextBlock}"
                                    Text="{Binding EndPoint, StringFormat={}({0})}"/>
                                <Separator/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            <Grid
                Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Style="{StaticResource BaseTextBlock}"
                    Text="{Binding SelectedPeer, Converter={StaticResource RecepientConverter}, StringFormat={}Recepient: {0}}"/>
                <ListBox
                    Grid.Row="1"
                    HorizontalContentAlignment="Stretch"
                    ItemsSource="{Binding Messages.AsObservable}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Margin="5"
                                HorizontalAlignment="{Binding Direction, Converter={StaticResource MessageDirectionAlignmentConverter}}"
                                Background="{Binding Direction, Converter={StaticResource MessageDirectionColorConverter}}">
                                <TextBlock
                                    Style="{StaticResource MessageDateTextBlock}"
                                    Text="{Binding Time, Converter={StaticResource DateTimeConverter}}"/>
                                <TextBlock
                                    Style="{StaticResource MessageContentTextBlock}"
                                    Text="{Binding Content}"/>
                                <TextBlock
                                    Style="{StaticResource MessageDeliveryStateTextBlock}"
                                    Text="{Binding DeliveryState, Converter={StaticResource DeliveryStateConverter}}"
                                    Visibility="{Binding Direction, Converter={StaticResource MessageDirectionToVisibilityConverter}}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Grid
                    Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid
                        Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource BaseTextBlock}"
                            Text="ASCII Arts"/>
                        <ComboBox
                            Grid.Row="1"
                            Style="{StaticResource BaseComboBox}"
                            ItemsSource="{Binding TextArts}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <Button
                                            Style="{StaticResource BaseButton}"
                                            Command="{Binding DataContext.PutAsciiArtCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                            CommandParameter="{Binding}">
                                            <TextBlock
                                                Style="{StaticResource BaseTextBlock}"
                                                Text="{Binding}"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                    <TextBox
                        Grid.Column="1"
                        x:Name="MessageTextBox"
                        Style="{StaticResource MessageTextBox}"
                        Text="{Binding CurrentMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button
                        Grid.Column="2"
                        Style="{StaticResource SendMessageButton}"
                        Command="{Binding SendMessageCommand}">
                        <TextBlock
                            Style="{StaticResource BaseTextBlock}"
                            Text="Send"/>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
